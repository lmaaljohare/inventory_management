<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="inventory_management.Views.DetailsPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="productName"/>
            <Entry x:Name="Name" Text="{Binding Name}"   
                           PlaceholderColor="White" HeightRequest="40"   
                           TextColor="Black"/>
            <Label Text="Barcode:" HorizontalOptions="Start" FontSize="Large" VerticalOptions="Center"/>
            <Label Text="{Binding BarCode}" TextColor="OrangeRed" FontSize="Large" VerticalOptions="Center"/>
            <DatePicker x:Name="txtDOB" Date="{Binding Date}" BackgroundColor="White" HeightRequest="40" HorizontalOptions="FillAndExpand"/>
            <Button Text="Update" BorderRadius="0" Margin="0,30,0,0" FontAttributes="Bold" TextColor="Black" BackgroundColor="#5989B5" Command="{Binding UpdateProductCommand}" />
            <Button Text="Delete" BorderRadius="0" Margin="0,30,0,0" FontAttributes="Bold" TextColor="Black" BackgroundColor="#5989B5" Command="{Binding DeleteProductCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>